<div class="users">

 <div class="form-holder">
  <%=form_for(@user, url: user_path, html: {id: "user-create-form", multipart: true }) do |f|%>
   <h1 class="text-center">
                 Update Register
                </h1>

   <div class="form-group">
    <h4 class="text-center"> Post Image </h4>
    <div id="user-image">
     <% if @user.image? %>
      <%= image_tag @user.image, class: "img img-responsive center-block" %>
       <% end %>
    </div>
   </div>

   <div class="form-group">
    <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>
   </div>

   <div class- "form-group">
    <h4><%=f.label :title_field, "Username" %></h4>
    <%=f.text_field :username, required: true, id: "topic_title_field", class: 'form-control'%>
   </div>

   <div class- "form-group">
    <h4><%=f.label :title_field, "Body"%></h4>
    <%=f.text_area :email, required: true, id: "user_email_field", class: 'form-control'%>
   </div>

   <div class="form-group text-center">
    <%=f.submit "Update Register", class: "btn btn-success btn-lg"%>
   </div>
   <%end%>
 </div>
</div>
